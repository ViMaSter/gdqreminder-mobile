{
  "name": "gdq-reminder-mobile",
  "version": "0.24.14",
  "author": "Vincent Mahnke (vincent@mahn.ke)",
  "private": true,
  "scripts": {
    "dev": "vite",
    "launch": "npm run build && npx cap sync && npx cap run android",
    "open": "npm run build && npx cap sync && npx cap open android",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview --port 4437",
    "test:unit": "vitest --environment jsdom",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "semantic-release": "semantic-release",
    "test:e2e": "playwright test -c playwright-ct.config.ts"
  },
  "dependencies": {
    "@capacitor-community/fcm": "^5.0.2",
    "@capacitor/android": "^5.3.0",
    "@capacitor/app-launcher": "^5.0.6",
    "@capacitor/cli": "^5.3.0",
    "@capacitor/core": "^5.3.0",
    "@capacitor/push-notifications": "^5.0.6",
    "@material/mwc-button": "^0.27.0",
    "@material/mwc-drawer": "^0.27.0",
    "@material/mwc-icon": "^0.27.0",
    "@material/mwc-icon-button": "^0.27.0",
    "@material/mwc-list": "^0.27.0",
    "@material/mwc-snackbar": "^0.27.0",
    "@material/mwc-top-app-bar-fixed": "^0.27.0",
    "@sentry/tracing": "^7.67.0",
    "@sentry/vue": "^7.67.0",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "ky": "^1.0.0",
    "pinia": "^2.1.6",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@playwright/experimental-ct-vue": "^1.37.1",
    "@rushstack/eslint-patch": "^1.3.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.4",
    "@sentry/vite-plugin": "^2.7.1",
    "@types/node": "^20.5.9",
    "@vitejs/plugin-vue": "^2.3.4",
    "@vitejs/plugin-vue-jsx": "^1.3.10",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.4.1",
    "eslint": "^8.48.0",
    "eslint-plugin-vue": "^8.7.1",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.3",
    "sass": "^1.66.1",
    "semantic-release": "^21.1.1",
    "typescript": "~5.2.2",
    "vite": "^2.9.16",
    "vitest": "^0.34.3",
    "vue-tsc": "^1.8.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ViMaSter/gdqreminder-mobile.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "release": {
    "branches": [
      {
        "name": "main"
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
