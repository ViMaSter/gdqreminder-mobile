{
  "name": "gdq-reminder-mobile",
  "version": "0.20.102",
  "author": "Vincent Mahnke (vincent@mahn.ke)",
  "private": true,
  "scripts": {
    "dev": "vite",
    "launch": "npm run build && npx cap sync && npx cap run android",
    "open": "npm run build && npx cap sync && npx cap open android",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview --port 4437",
    "test:unit": "vitest --environment jsdom",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@capacitor-community/fcm": "^3.0.2",
    "@capacitor/android": "^4.7.1",
    "@capacitor/app-launcher": "^4.0.0",
    "@capacitor/cli": "^4.7.1",
    "@capacitor/core": "^4.7.1",
    "@capacitor/push-notifications": "^4.0.0",
    "@material/mwc-button": "^0.27.0",
    "@material/mwc-drawer": "^0.27.0",
    "@material/mwc-icon": "^0.27.0",
    "@material/mwc-icon-button": "^0.27.0",
    "@material/mwc-list": "^0.27.0",
    "@material/mwc-snackbar": "^0.27.0",
    "@material/mwc-top-app-bar-fixed": "^0.27.0",
    "@sentry/vue": "^7.46.0",
    "@sentry/tracing": "^7.46.0",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "ky": "^0.33.3",
    "pinia": "^2.0.33",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.7",
    "@sentry/vite-plugin": "^0.4.0",
    "@types/node": "^18.15.11",
    "@vitejs/plugin-vue": "^2.3.4",
    "@vitejs/plugin-vue-jsx": "^1.3.10",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.3.2",
    "eslint": "^8.37.0",
    "eslint-plugin-vue": "^8.7.1",
    "jsdom": "^21.1.1",
    "prettier": "^2.8.7",
    "sass": "^1.60.0",
    "semantic-release": "^21.0.0",
    "typescript": "~5.0.3",
    "vite": "^2.9.14",
    "vitest": "^0.29.8",
    "vue-tsc": "^1.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ViMaSter/gdqreminder-mobile.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "release": {
    "branches": [
      {
        "name": "main"
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
