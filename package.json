{
  "name": "gdq-reminder-mobile",
  "version": "5.0.10",
  "author": "Vincent Mahnke (vincent@mahn.ke)",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite --host",
    "launch": "npm run build && npx cap sync && npx cap run android",
    "open": "npm run build && npx cap sync && npx cap open android",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview --port 4437",
    "test:unit": "vitest --environment jsdom",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "semantic-release": "semantic-release",
    "test:e2e": "playwright test -c playwright-ct.config.ts"
  },
  "dependencies": {
    "@capacitor-community/fcm": "^7.1.1",
    "@capacitor-firebase/authentication": "^7.0.0",
    "@capacitor/android": "^7.1.0",
    "@capacitor/app": "^7.0.0",
    "@capacitor/app-launcher": "^7.0.0",
    "@capacitor/core": "^7.1.0",
    "@capacitor/ios": "^7.1.0",
    "@capacitor/push-notifications": "^7.0.0",
    "@material/material-color-utilities": "^0.3.0",
    "@material/mwc-dialog": "^0.27.0",
    "@material/mwc-drawer": "^0.27.0",
    "@material/mwc-icon-button": "^0.27.0",
    "@material/mwc-snackbar": "^0.27.0",
    "@material/mwc-top-app-bar-fixed": "^0.27.0",
    "@material/web": "^2.2.0",
    "@sentry/cli": "^2.42.3",
    "@sentry/vue": "^9.6.0",
    "@vitejs/plugin-legacy": "^6.0.2",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "capacitor-plugin-safe-area": "4.0.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "firebase": "^11.4.0",
    "ky": "^1.7.5",
    "pinia": "^3.0.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.1.0",
    "@playwright/experimental-ct-vue": "^1.51.1",
    "@rushstack/eslint-patch": "^1.11.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@sentry/vite-plugin": "^3.2.2",
    "@types/node": "^22.13.10",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitejs/plugin-vue-jsx": "^4.1.2",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.22.0",
    "eslint-plugin-vue": "*",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "sass": "^1.86.0",
    "semantic-release": "^24.2.3",
    "typescript": "~5.8.2",
    "vite": "^6.2.2",
    "vitest": "^3.0.9",
    "vue-tsc": "^2.2.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ViMaSter/gdqreminder-mobile.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "release": {
    "branches": [
      {
        "name": "main"
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "docs",
              "scope": "README",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "type": "perf",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
