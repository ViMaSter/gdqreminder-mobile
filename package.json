{
  "name": "gdq-reminder-mobile",
  "version": "3.1.19",
  "author": "Vincent Mahnke (vincent@mahn.ke)",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite --host",
    "launch": "npm run build && npx cap sync && npx cap run android",
    "open": "npm run build && npx cap sync && npx cap open android",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview --port 4437",
    "test:unit": "vitest --environment jsdom",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "semantic-release": "semantic-release",
    "test:e2e": "playwright test -c playwright-ct.config.ts"
  },
  "dependencies": {
    "@capacitor-community/fcm": "^6.0.0",
    "@capacitor-firebase/authentication": "^6.1.0",
    "@capacitor/android": "^6.1.1",
    "@capacitor/app-launcher": "^6.0.1",
    "@capacitor/core": "^6.1.1",
    "@capacitor/ios": "^6.1.1",
    "@capacitor/push-notifications": "^6.0.1",
    "@material/material-color-utilities": "^0.3.0",
    "@material/mwc-dialog": "^0.27.0",
    "@material/mwc-drawer": "^0.27.0",
    "@material/mwc-icon-button": "^0.27.0",
    "@material/mwc-snackbar": "^0.27.0",
    "@material/mwc-top-app-bar-fixed": "^0.27.0",
    "@material/web": "^1.5.1",
    "@sentry/cli": "^2.32.2",
    "@sentry/vue": "^8.18.0",
    "@vitejs/plugin-legacy": "^5.4.1",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "capacitor-plugin-safe-area": "^3.0.3",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "firebase": "^10.12.3",
    "ky": "^1.4.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.32",
    "vue-router": "^4.4.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.1.0",
    "@playwright/experimental-ct-vue": "^1.45.2",
    "@rushstack/eslint-patch": "^1.10.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.0",
    "@sentry/vite-plugin": "^2.21.1",
    "@types/node": "^20.14.11",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.27.0",
    "jsdom": "^24.1.0",
    "prettier": "^3.3.3",
    "sass": "^1.77.8",
    "semantic-release": "^24.0.0",
    "typescript": "~5.5.3",
    "vite": "^5.3.4",
    "vitest": "^2.0.3",
    "vue-tsc": "^2.0.26"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ViMaSter/gdqreminder-mobile.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "release": {
    "branches": [
      {
        "name": "main"
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "docs",
              "scope": "README",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "type": "perf",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
